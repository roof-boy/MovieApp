<script>
	const buyBoxes = document.querySelectorAll('[id^="buyBox"]');

	buyBoxes.forEach(option => {
		option.addEventListener('mouseenter', event => {
			const buyBtn = option.querySelector("#buyBtn")

			buyBtn.classList.remove("d-none")
		});
		option.addEventListener('mouseleave', event => {
			const buyBtn = option.querySelector("#buyBtn")

			buyBtn.classList.add("d-none")
		});
	});
</script>