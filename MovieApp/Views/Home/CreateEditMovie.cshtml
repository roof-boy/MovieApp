@{
	ViewData["Title"] = "Create Movie";
}
@model MovieApp.Models.Movie


<form asp-controller="Movie" method="post" asp-action="CreateEditMovieForm">
	<input hidden type="number" class="form-control" asp-for="Id" step="1" />

	<label class="mt-4">Movie Name</label>
	<input type="text" class="form-control w-50" asp-for="Name" placeholder="Text" required />

	<label class="mt-4">Price</label>
	<input type="number" class="form-control w-25" asp-for="Price" placeholder="0" step="1" required />

	<label hidden class="mt-4">Thumbnail Url</label>
	<input hidden type="text" class="form-control w-75" asp-for="ThumbUrl" placeholder="URL" />

	<button type="submit" class="btn btn-primary mt-4">Add Movie</button>
</form>

<partial name="_ValidationScriptsPartial" />